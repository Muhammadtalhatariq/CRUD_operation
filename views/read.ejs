<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheet/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white">
      <div class="p-10">
        <a class="text-blue-500" href="/">back to Home</a>
      </div>
      <div class="px-10">
        <h1 class="text-3xl">All User</h1>
        <div class="flex flex-wrap gap-4">
<% if(users.length > 0 ){ %>
  <% users.forEach(function(user) {%>
    <div class="bg-zinc-700 w-60 mt-4 pt-3">
      <div class="bg-zinc-500 h-48 w-52 mx-4 overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="<%= user.img %> "
          alt=""
        />
      </div>
      <h1 class="text-2xl mx-4"><%= user.name %></h1>
      <p class="mx-4 text-zinc-400"><%= user.email %></p>
      <div class="flex justify-between mx-4 pt-5">
        <a class="text-blue-500" href="/edit/<%= user._id %>">Edit User</a>
        <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
      </div>
    </div>
    <% }); %>
<% } else { %>
<h3 class="text-2xl text-zinc-400 pt-10">No Users Yet</h3>
<% } %>
        
        </div>
      </div>
    </div>
  </body>
</html>
